<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hintergrund"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SynWord"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="60dp"
        android:textColor="#ffffffff"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HauptmenÃ¼"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_weight="0.25"
        android:textStyle="italic"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:text="Spielen"
        android:id="@+id/btnPlay"
        android:background="@drawable/buttongreen"
        android:layout_weight="0.25"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:onClick="showPlay"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:text="Rangliste"
        android:id="@+id/btnScore"
        android:background="@drawable/buttongrey"
        android:layout_weight="0.25"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:onClick="showHighscore"
        android:textColor="#000000"
        android:layout_below="@+id/btnPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:text="Hilfe"
        android:id="@+id/btnHelp"
        android:background="@drawable/buttongreen"
        android:layout_weight="0.25"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:onClick="showHelp"
        android:layout_below="@+id/btnScore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:text="Credits"
        android:id="@+id/btnCredits"
        android:background="@drawable/buttongrey"
        android:layout_weight="0.25"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:onClick="showCredits"
        android:textColor="#000000"
        android:layout_below="@+id/btnHelp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp" />



</RelativeLayout>