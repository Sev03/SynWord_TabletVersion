<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="1"
    android:orientation="vertical"
    android:stretchColumns="0,1,2">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Runde 1/10"
                android:id="@+id/txtRunde"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txtPunkte"
                android:text="Punkte: "
                android:layout_column="2"
                android:layout_weight="0.5" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="476dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="540dp"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar"
                        android:background="#b2b2b2" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Suche ein Synonym fÃ¼r:"
                    android:id="@+id/textView"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="25dp"
                    android:textColor="#ff000000"
                    android:layout_margin="20dp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="DOG"
                    android:id="@+id/txtWord"
                    android:layout_gravity="center_horizontal"
                    android:textSize="40dp"
                    android:textColor="#FF000000"
                    android:layout_weight="0.32" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.28"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:text="hound"
                        android:id="@+id/btnWord1"
                        android:layout_row="0"
                        android:layout_column="7"
                        android:background="@drawable/bl"
                        android:layout_margin="10dp" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:text="wolf"
                        android:id="@+id/btnWord2"
                        android:layout_row="0"
                        android:layout_column="8"
                        android:background="@drawable/gr"
                        android:layout_margin="10dp" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:text="hyena"
                        android:id="@+id/btnWord3"
                        android:layout_row="1"
                        android:layout_column="7"
                        android:background="@drawable/gr"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:text="puppy"
                        android:id="@+id/btnWord4"
                        android:layout_row="1"
                        android:layout_column="8"
                        android:layout_columnWeight="2"
                        android:background="@drawable/bl"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:text="lynx"
                        android:id="@+id/btnWord5"
                        android:layout_row="2"
                        android:layout_column="7"
                        android:background="@drawable/bl"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:text="fox"
                        android:id="@+id/btnWord6"
                        android:layout_row="2"
                        android:layout_column="8"
                        android:layout_columnWeight="2"
                        android:background="@drawable/gr"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp" />
                </GridLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>